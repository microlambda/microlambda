{
  "extends": "../mila.shared.json",
  "targets": {
    "build": {
      "cmd": [
        "../node_modules/.bin/vite build"
      ],
      "src": {
        "internals": [
          "src/**/*.ts",
          "tsconfig.json"
        ],
        "root": [
          "tsconfig.json"
        ]
      },
      "artifacts": [
        "build/**/*",
        "dist/**/*"
      ]
    },
    "test": {
      "cmd": "../../node_modules/.bin/jest",
      "src": {
        "internals": [
          "{src,test}/**/*.spec.ts",
          "tsconfig.json",
          "jest.config.js"
        ],
        "deps": [
          "src/**/*.ts",
          "tsconfig.json"
        ]
      }
    }
  }
}
