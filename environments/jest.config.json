{
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/src"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "maxConcurrency": 5,
  "testRegex": ".+\\.(test|spec)\\.tsx?$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  },
  "collectCoverage": true,
  "coverageReporters": ["html", "lcov"],
  "collectCoverageFrom": ["src/**/*.ts"],
  "verbose": true
}
