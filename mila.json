{
  "targets": {
    "lint": {
      "cmd": "../node_modules/.bin/eslint {src,test}/**/*.{ts,tsx,json,yml}",
      "src": {
        "internals": [
          "{src,test}/**/*.{ts,tsx,json,yml}",
          "eslintrc"
        ],
        "root": [
          "eslintrc"
        ]
      }
    },
    "build": {
      "cmd": [
        "../node_modules/.bin/tsc --build"
      ],
      "src": {
        "internals": [
          "src/**/*.ts",
          "tsconfig.json"
        ],
        "deps": [
          "src/**/*.ts",
          "tsconfig.json"
        ],
        "root": [
          "tsconfig.json"
        ]
      },
      "artifacts": [
        "lib/**/*.js",
        "lib/**/*.d.ts",
        "dist/**/*.js",
        "dist/**/*.d.ts"
      ]
    }
  }
}
