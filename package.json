{
  "name": "microlambda",
  "version": "0.0.1-alpha",
  "private": true,
  "description": "Microlambda framework (a.k.a Âµlambda or mila) monorepo main package.",
  "author": "Mario Arnautou",
  "repository": {
    "url": "https://bitbucket.org/neoxia/microlambda"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">= 3.0.0"
  },
  "scripts": {
    "postinstall": "husky install",
    "lint": "yarn workspaces foreach -pv run lint",
    "build": "yarn workspaces foreach -pv --topological-dev run build",
    "test": "yarn workspaces foreach -ptv run test",
    "publish:all": "yarn ts-node ./scripts/publish.ts",
    "build:core": "yarn workspace @microlambda/core run build",
    "lint:core": "yarn workspace @microlambda/core run lint",
    "test:core": "yarn workspace @microlambda/core run test",
    "publish:core": "yarn workspace @microlambda/core npm publish --access public",
    "build:cli": "yarn workspace @microlambda/cli run build",
    "lint:cli": "yarn workspace @microlambda/cli run lint",
    "test:cli": "yarn workspace @microlambda/cli run test",
    "publish:cli": "yarn workspace @microlambda/cli npm publish --access public",
    "build:server": "yarn workspace @microlambda/server run build",
    "lint:server": "yarn workspace @microlambda/server run lint",
    "test:server": "yarn workspace @microlambda/server run test",
    "publish:server": "yarn workspace @microlambda/server npm publish --access public",
    "build:handling": "yarn workspace @microlambda/handling run build",
    "lint:handling": "yarn workspace @microlambda/handling run lint",
    "test:handling": "yarn workspace @microlambda/handling run test",
    "publish:handling": "yarn workspace @microlambda/handling npm publish --access public",
    "build:client": "yarn workspace @microlambda/client run build",
    "lint:client": "yarn workspace @microlambda/client run lint",
    "test:client": "yarn workspace @microlambda/client run test",
    "build:plugin": "yarn workspace serverless-microlambda run build",
    "lint:plugin": "yarn workspace serverless-microlambda run lint",
    "test:plugin": "yarn workspace serverless-microlambda run test",
    "publish:plugin": "yarn workspace serverless-microlambda npm publish --access public",
    "build:types": "yarn workspace @microlambda/types run build",
    "lint:types": "yarn workspace @microlambda/types run lint",
    "test:types": "yarn workspace @microlambda/types run test",
    "publish:types": "yarn workspace @microlambda/types npm publish --access public",
    "build:testing": "yarn workspace @microlambda/testing run build",
    "lint:testing": "yarn workspace @microlambda/testing run lint",
    "test:testing": "yarn workspace @microlambda/testing run test",
    "publish:testing": "yarn workspace @microlambda/testing npm publish --access public",
    "build:generators": "yarn workspace @microlambda/generators run build",
    "lint:generators": "yarn workspace @microlambda/generators run lint",
    "test:generators": "yarn workspace @microlambda/generators run test",
    "publish:generators": "yarn workspace @microlambda/generators npm publish --access public"
  },
  "workspaces": [
    "types",
    "cli",
    "core",
    "client",
    "docs/website",
    "generators",
    "handling",
    "plugin",
    "testing",
    "server"
  ],
  "license": "MIT",
  "devDependencies": {
    "@centipod/cli": "^0.0.1-alpha.7",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^27.0.3",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "prettier": "^2.4.1",
    "sinon": "^12.0.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "types/**/*.{ts,tsx,json,yml}": [
      "yarn lint:types --fix"
    ],
    "cli/**/*.{ts,tsx,json,yml}": [
      "yarn lint:cli --fix"
    ],
    "core/**/*.{ts,tsx,json,yml}": [
      "yarn lint:core --fix"
    ],
    "client/**/*.{ts,tsx,json,yml}": [
      "yarn lint:client --fix"
    ],
    "handling/**/*.{ts,tsx,json,yml}": [
      "yarn lint:handling --fix"
    ],
    "plugin/**/*.{ts,tsx,json,yml}": [
      "yarn lint:plugin --fix"
    ],
    "server/**/*.{ts,tsx,json,yml}": [
      "yarn lint:server --fix"
    ],
    "testing/**/*.{ts,tsx,json,yml}": [
      "yarn lint:testing --fix"
    ],
    "generators/**/*.{ts,tsx,json,yml}": [
      "yarn lint:generators --fix"
    ]
  }
}
