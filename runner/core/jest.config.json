{
  "testEnvironment": "node",
  "roots": ["<rootDir>/test"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "maxConcurrency": 1,
  "testRegex": ".+\\.(test|spec)\\.tsx?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  },
  "verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts"
  ],
  "coverageReporters": ["json", "html", "lcov"]
}
