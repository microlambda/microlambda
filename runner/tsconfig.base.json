{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2020", "esnext", "esnext.asynciterable"],
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "noImplicitReturns": true,
    "strict": true,
    "target": "es2020",
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": false,
    "skipLibCheck": true
  }
}
